# ARIA Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# Core Settings
# =============================================================================
# Environment: development | staging | production | test
ENVIRONMENT=development
DEBUG=false
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-generate-a-real-one
LOG_LEVEL=INFO

# =============================================================================
# API Server
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
# Comma-separated list of allowed origins
CORS_ORIGINS=["http://localhost:3000"]

# =============================================================================
# Database (PostgreSQL with pgvector)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://aria:aria@localhost:5432/aria_db

# =============================================================================
# Redis (Cache, Sessions, Rate Limiting)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Celery (Task Queue)
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# AI Model APIs
# =============================================================================
# Anthropic (Claude) - Primary LLM
ANTHROPIC_API_KEY=sk-ant-your-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# OpenAI - Embeddings and fallback LLM
OPENAI_API_KEY=sk-your-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# Vector Database (Pinecone)
# =============================================================================
PINECONE_API_KEY=your-pinecone-key-here
PINECONE_INDEX_NAME=aria-documents

# =============================================================================
# Embedding Configuration
# =============================================================================
EMBEDDING_DIMENSION=1536

# =============================================================================
# Literature APIs
# =============================================================================
# PubMed - Required for literature search
PUBMED_EMAIL=your-email@company.com
PUBMED_API_KEY=your-ncbi-api-key-optional

# Semantic Scholar - Enhanced paper metadata
SEMANTIC_SCHOLAR_API_KEY=your-s2-api-key-optional

# =============================================================================
# RAG Pipeline Configuration
# =============================================================================
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
RAG_RETRIEVAL_TOP_K=20
RAG_RERANK_TOP_K=5

# =============================================================================
# Feature Flags
# =============================================================================
FEATURE_MOLECULAR_SEARCH=true
FEATURE_AUDIT_TRAIL=true
